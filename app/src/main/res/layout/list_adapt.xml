        <TextView
            android:id="@+id/tx2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:textStyle="italic"
            android:text="\tTextView" />
    </LinearLayout>

</LinearLayout>